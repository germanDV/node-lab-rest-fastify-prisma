{
  "name": "node-lab-rest-fastify-prisma",
  "description": "Basic example of Node service using Fastify, Zod and Prisma",
  "version": "0.1.0",
  "main": "dist/server.js",
  "author": "German Viescas",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development nodemon ./src/server.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node ./dist/server.js",
    "test:init": "ts-jest config:init",
    "test": "NODE_ENV=testing PORT=3334 jest --config=./src/jest.config.js",
    "test:watch": "NODE_ENV=testing PORT=3334 jest --config=./src/jest.config.js --watch",
    "prisma:studio": "prisma studio",
    "prisma:init": "prisma generate && prisma migrate deploy"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/redis": "^6.1.0",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.3.0",
    "@prisma/client": "4.10.1",
    "fastify": "^4.13.0",
    "zod": "^3.20.6",
    "zod-prisma-types": "^2.0.17",
    "zod-to-json-schema": "^3.20.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/node": "^18.11.18",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prisma": "^4.10.1",
    "sinon": "^15.0.1",
    "ts-jest": "^29.0.5",
    "ts-mock-imports": "^1.3.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
